Val suerte = List(5,7)
def  sumas(doble: List[Int]): Int={
  var sumando = 0
  for (n <- suerte){
    if(n == 7){
      sumando += n*2
    }else {
      sumando += n
    }
  }
  return sumando
  }
println(sumas(suerte))


    //--*Ejercicio 4*--//

val lista = List(2,1,4,3)
def balancear (balanceando: List[Int]): Boolean={
  val (a,b) = balanceando.splitAt(balanceando.length/2)
  if (a.sum == b.sum){ return true }
  else
  return false
}
println(balancear(lista))
println("")


