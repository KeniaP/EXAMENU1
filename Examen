def par (num: Int): Boolean={
    if(num % 2 == 0){
      return true
    }
  return false
}

println(par(5))


     //--*EJERCICIO2*--//

def pares (numeros: Int): Boolean={
    if (numeros % 2 == 0) {
      return true
    }
  return false
}
val listas = List(2,3,4,5)
var a = 0
for(a <- listas){
  if (a <= a) {
    print("El valor " + a + " es: ")
    println(pares(a))
  }
}


